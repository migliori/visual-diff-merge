{
  "name": "diff-files",
  "version": "1.0.0",
  "description": "Visual Diff Merge Tool",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "concurrently \"webpack --mode development --watch\" \"npm:watch:scss\"",
    "dev:once": "webpack --mode development",
    "build": "webpack --mode production",
    "compile:scss": "node scripts/compile-scss.js",
    "watch:scss": "chokidar \"diff-viewer/scss/*.scss\" \"docs/scss/*.scss\" -c \"npm run compile:scss\" --initial",
    "analyze": "webpack --mode production --env analyze=true",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "lint:unused": "eslint src --ext .js --rule \"unused-imports/no-unused-imports: error\" --rule \"unused-imports/no-unused-vars: error\""
  },
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "terser-webpack-plugin": "^5.3.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "cssnano": "^7.0.6",
    "depcheck": "^1.4.7",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.5",
    "rimraf": "^6.0.1",
    "ts-prune": "^0.10.3",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
